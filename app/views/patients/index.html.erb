<% provide :title, "Patients" %>
<% provide :nav_export_link do %>
  <%= link_to "Export data for all patients to CSV", patients_path(format: "csv") %>
<% end %>

<% provide :resource_form do %>
  <%= render(partial: "shared/error_messages",
             locals: { resource: @patient }) %>
  <%= render(partial: "patients/patient_add") %>
  <%= render(partial: "patients/patient_search") %>
<% end %>

<% provide :resource_display do %>
  <%= render(partial: "patients/patients_display") %>
<% end %>

<%= render(template: "layouts/form_and_display_page") %>
