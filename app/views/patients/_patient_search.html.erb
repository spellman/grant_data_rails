<div id="patient-search">
  <%= form_tag patients_path, method: "get" do %>
    <div class="form-group">
      <%= text_field_tag "search[study_assigned_id]", "", class: "form-control", placeholder: "Patient ID #" %>
    </div>
    <%= submit_tag "Find patient by ID #", name: nil, class: "btn btn-primary" %>
  <% end %>
</div>
