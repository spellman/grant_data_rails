<div class="row">
  <div class="col-sm-6 col-md-4 col-lg-4">
    <%= form_tag sessions_path, id: "signin-form" do %>
      <h2 class="form-signin-heading">Sign in</h2>
      <div>
        <%= email_field_tag :email, params[:email], class: "form-control", placeholder: "Email address", autofocus: true %>
      </div>
      <div>
        <%= password_field_tag :password, nil, class: "form-control", placeholder: "Password" %>
      </div>
      <div>
        <%= submit_tag "Sign in", class: "btn btn-large btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
