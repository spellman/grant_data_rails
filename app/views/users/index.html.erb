<%= provide :title, "Users" %>

<%= render "shared/error_messages", resource: @user %>
<%= form_for @user do |f| %>
  <div>
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div>
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>

  <div>
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation %>
  </div>

  <div><%= f.submit "Register" %></div>
<% end %>

<%= will_paginate %>
  <ul class="users">
    <% @users.each do |user| %>
      <li>
        <div class="user_name">
          <%= user.email %>
        </div>
        <div class="delete_user">
          <%= link_to "edit", user_path(user.id) %>
          <% unless user == current_user %>
            <%= link_to "delete", user, method: :delete, data: { confirm: "Delete for realsies?" } %>
          <% end %>
        </div>
      </li>
    <% end %>
  </ul>
<%= will_paginate %>
