<h2>Register User</h2>

<%= render "shared/error_messages", resource: @user %>

<%= form_for @user do |f| %>
  <div>
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div>
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>

  <div>
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation %>
  </div>

  <div><%= f.submit "Register" %></div>
<% end %>
