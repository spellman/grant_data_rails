<table id="users" class="table table-striped">
  <thead>
    <tr>
      <th>Email</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.email %></td>
      <td><%= link_to "edit", user_path(user.id) %></td>
    <% if policy(user).destroy? %>
      <td>
        <%= link_to "delete", user, method: :delete, data: { confirm: "Delete #{user.email}?\nThis can't be undone." } %>
      </td>
    <% end %>
    </tr>
  <% end %>
  </tbody>
</table>

<%= paginate @users if @users %>
