<div id="records">
<% @view_model.each do |attr_name, attr_values| %>
  <div>
    <div class="attribute">
      <p><%= attr_name %></p>
    </div>
  <% attr_values.each do |value| %>
    <div class="value">
      <p><%= value %></p>
    </div>
  <% end %>
  </div>
<% end %>
</div>

<div id="export" class="row">
  <div class="col-sm-8 col-md-8 col-lg-8">
  </div>
  <div id="export-records" class="col-sm-4 col-md-4 col-lg-4">
    <%= link_to "Export all records to CSV", "/records.csv" %>
  </div>
</div>
