<% provide :title, "Home" %>

<% provide :resource_form do %>
  <%= render "shared/error_messages", resource: @record %>
  <%= render "records/record_form", button_text: "Save" %>
<% end %>

<% provide :resource_display do %>
  <%= render "records/records_display" %>
  <div class="row">
    <div class="col-sm-8 col-md-8 col-lg-8">
      <%= paginate @records %>
    </div>
    <div id="export-records" class="col-sm-4 col-md-4 col-lg-4">
      <%= link_to "Export all records to CSV", "/records.csv" %>
    </div>
  </div>
<% end %>

<%= render template: "layouts/resource_index" %>
