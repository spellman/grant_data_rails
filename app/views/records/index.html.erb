<%= render "shared/error_messages", resource: @record %>
<%= form_for @record do |f| %>
  <%= f.label "name", "Name" %>
  <%= f.text_field "name" %>
  <%= f.submit "save" %>
<% end %>

<%= will_paginate %>
  <table class="records">
    <colgroup>
      <col class="records_column_1">
      <col class="records_column_2">
    </colgroup>
    <tr>
      <th>Name</th>
    </tr>
    <% @records.each do |record| %>
      <tr>
        <td><%= record.name %></td>
      </tr>
    <% end %>
  </table>
<%= will_paginate %>
