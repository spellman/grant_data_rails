<%= provide :title, "Home" %>

<%= render "shared/error_messages", resource: @record %>
<%= form_for @record do |f| %>
  <%= f.label "name", "Name" %>
  <%= f.text_field "name" %>
  <%= f.submit "save" %>
<% end %>

<%= will_paginate %>
  <table id="records_table">
    <colgroup>
      <col id="records_table_column_1">
      <col id="records_table_column_2">
      <col id="records_table_column_3">
    </colgroup>
    <tr>
      <th>Name</th>
    </tr>
    <% @records.each do |record| %>
      <tr>
        <td><%= record.name %></td>
        <td><%= link_to "edit", record_path(record.id) %></td>
        <td><%= link_to "delete", record, method: :delete, data: { confirm: "Delete for realsies?" } %></td>
      </tr>
    <% end %>
  </table>
<%= will_paginate %>

<%= link_to "Export records to CSV", "/records.csv" %>
