<% provide :title, "Records" %>
<% provide :nav_export_link do %>
  <%= link_to "Export data for #{@patient.name} to CSV", patient_records_path(@patient.id, format: "csv") %>
<% end %>

<% provide :full_width_top do %>
  <div class="container">
    <div class="patient-records-header page-header">
      <h1><%= @patient.name %><small><%= @patient.diagnosis %></small></h1>
    </div>
  </div>
<% end %>

<% provide :resource_form do %>
  <%= render "shared/error_messages", resource: @record %>
  <%= render "records/record_form", button_text: "Save" %>
<% end %>

<% provide :resource_display do %>
  <%= render "records/patient_records_display" %>
<% end %>

<%= render template: "layouts/form_and_display_page" %>
