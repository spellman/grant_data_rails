<%= form_for @patient, method: :post, url: patient_records_path(@patient.id) do |f| %>
  <%= f.hidden_field :patient_id, value: params[:patient_id] %>

  <div class="form-group">
  <%= fields_for @bmi do |o| %>
    <div id="bmi" class="row">
      <div class="col-sm-5, col-md-5, col-lg-5">
        <%= o.label :bmi, "BMI" %><br />
        <%= o.text_field :bmi, class: "form-control" %>
      </div>
      <div class="col-sm-7, col-md-7, col-lg-7">
        <%= o.label :date, "Date" %><br />
        <%= o.date_field :date, class: "form-control" %>
      </div>
    </div>
  <% end %>
  </div>

  <div class="form-group">
  <%= fields_for @eye_exam do |o| %>
    <%= o.label :date, "Eye Exam Date" %><br />
    <%= o.date_field :date, class: "form-control" %>
  <% end %>
  </div>

  <div class="form-group">
  <%= fields_for @foot_exam do |o| %>
    <%= o.label :date, "Foot Exam Date" %><br />
    <%= o.date_field :date, class: "form-control" %>
  <% end %>
  </div>

  <div class="form-group">
  <%= fields_for @a1c do |o| %>
    <div id="a1c" class="row">
      <div class="col-sm-5, col-md-5, col-lg-5">
        <%= o.label :a1c, "A1c (%)" %><br />
        <%= o.text_field :a1c, class: "form-control" %>
      </div>
      <div class="col-sm-7, col-md-7, col-lg-7">
        <%= o.label :date, "Date" %><br />
        <%= o.date_field :date, class: "form-control" %>
      </div>
    </div>
  <% end %>
  </div>

  <div class="form-group">
  <%= fields_for @cholesterol do |o| %>
    <div id="cholesterol" class="row">
      <div class="col-sm-3, col-md-3, col-lg-3">
        <%= o.label :tc, "TC<br />(mg/dl)".html_safe %><br />
        <%= o.text_field :tc, class: "form-control" %>
      </div>
      <div class="col-sm-3, col-md-3, col-lg-3">
        <%= o.label :tg, "TG<br />(mg/dl)".html_safe %><br />
        <%= o.text_field :tg, class: "form-control" %>
      </div>
      <div class="col-sm-3, col-md-3, col-lg-3">
        <%= o.label :hdl, "HDL<br />(mg/dl)".html_safe %><br />
        <%= o.text_field :hdl, class: "form-control" %>
      </div>
      <div class="col-sm-3, col-md-3, col-lg-3">
        <%= o.label :ldl, "LDL<br />(mg/dl)".html_safe %><br />
        <%= o.text_field :ldl, class: "form-control" %>
      </div>
    </div>
    <div>
      <%= o.label :date, "Date" %><br />
      <%= o.date_field :date, class: "form-control" %>
    </div>
  <% end %>
  </div>

  <div class="form-group">
  <%= fields_for @acr do |o| %>
    <div id="acr" class="row">
      <div class="col-sm-5, col-md-5, col-lg-5">
        <%= o.label :acr, "ACR (mcg/mg)" %><br />
        <%= o.text_field :acr, class: "form-control" %>
      </div>
      <div class="col-sm-7, col-md-7, col-lg-7">
        <%= o.label :date, "Date" %><br />
        <%= o.date_field :date, class: "form-control" %>
      </div>
    </div>
  <% end %>
  </div>

  <div class="form-group">
  <%= fields_for @renal do |o| %>
    <div id="bun-creatinine" class="row">
      <div class="col-sm-6, col-md-6, col-lg-6">
        <%= o.label :bun, "BUN (mg/dl)" %><br />
        <%= o.text_field :bun, class: "form-control" %>
      </div>
      <div class="col-sm-6, col-md-6, col-lg-6">
        <%= o.label :creatinine, "Creatinine (mg/dl)" %><br />
        <%= o.text_field :creatinine, class: "form-control" %>
      </div>
    </div>
    <div>
      <%= o.label :date, "Date" %><br />
      <%= o.date_field :date, class: "form-control" %>
    </div>
  <% end %>
  </div>

  <div class="form-group">
  <%= fields_for @ckd_stage do |o| %>
    <div id="ckd-stage" class="row">
      <div class="col-sm-5, col-md-5, col-lg-5">
        <%= o.label :ckd_stage, "CKD Stage" %><br />
        <%= o.text_field :ckd_stage, class: "form-control" %>
      </div>
      <div class="col-sm-7, col-md-7, col-lg-7">
        <%= o.label :date, "Date" %><br />
        <%= o.date_field :date, class: "form-control" %>
      </div>
    </div>
  <% end %>
  </div>

  <div class="form-group">
  <%= fields_for @liver do |o| %>
    <div id="ast-alt" class="row">
      <div class="col-sm-6, col-md-6, col-lg-6">
        <%= o.label :ast, "AST (mg/dl)" %><br />
        <%= o.text_field :ast, class: "form-control" %>
      </div>
      <div class="col-sm-6, col-md-6, col-lg-6">
        <%= o.label :alt, "ALT (mg/dl)" %><br />
        <%= o.text_field :alt, class: "form-control" %>
      </div>
    </div>
    <div>
      <%= o.label :date, "Date" %><br />
      <%= o.date_field :date, class: "form-control" %>
    </div>
  <% end %>
  </div>

  <div class="form-group">
  <%= fields_for @flu do |o| %>
    <div>
      <%= o.label :date, "Flu Date" %><br />
      <%= o.date_field :date, class: "form-control" %>
    </div>
  <% end %>
  </div>

  <div class="form-group">
  <%= fields_for @pneumonia do |o| %>
    <div>
      <%= o.label :date, "Pneumonia Date" %><br />
      <%= o.date_field :date, class: "form-control" %>
    </div>
  <% end %>
  </div>

  <%= f.submit button_text, class: "btn btn-primary" %>
<% end %>
