<div id="table-container">
  <table id="records" class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
    <% @records.each do |record| %>
      <tr>
        <td><%= record.name %></td>
        <td><%= link_to "edit", record_path(record.id) %></td>
        <td><%= link_to "delete", record, method: :delete, data: { confirm: "Delete #{record.name}?\nThis can't be undone." } %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>

<div class="row">
  <div class="col-sm-8 col-md-8 col-lg-8">
    <%= paginate @records %>
  </div>
  <div id="export-records" class="col-sm-4 col-md-4 col-lg-4">
    <%= link_to "Export all records to CSV", "/records.csv" %>
  </div>
</div>
