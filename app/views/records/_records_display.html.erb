<table id="records" class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <% @records.each do |record| %>
    <tr>
      <td><%= record.name %></td>
      <td><%= link_to "edit", record_path(record.id) %></td>
      <td><%= link_to "delete", record, method: :delete, data: { confirm: "Delete #{record.name}?\nThis can't be undone." } %></td>
    </tr>
  <% end %>
  </tbody>
</table>
